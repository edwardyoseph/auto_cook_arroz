AddHook("onprocesstankupdatepacket", "rp", function(packet)
    if packet.type == 17 or packet.type == 3 or packet.type == 8 then 
    return true 
    end
end)
AddHook("onvariant", "hook", function(var)
if var[0] == "OnSDBroadcast" then
return true
end
if var[0] == "OnConsoleMessage" and var[1]:find("!bfg") then
SendPacket(2, [[
action|dialog_return
dialog_name|cheats
check_autofarm|1
check_bfg|1
check_autospam|0
check_autopull|0
check_autoplace|0
check_antibounce|0
check_modfly|0
check_speed|0
check_gravity|0
check_lonely|0
check_fastdrop|0
check_gems|0
]])
elseif var[0] == "OnConsoleMessage" and var[1]:find("!stop") then
SendPacket(2, [[
action|dialog_return
dialog_name|cheats
check_autofarm|0
check_bfg|0
check_autospam|0
check_autopull|0
check_autoplace|0
check_antibounce|0
check_modfly|0
check_speed|0
check_gravity|0
check_lonely|0
check_fastdrop|0
check_gems|0
]])
end
return false
end)
